{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "rootDir": "src",
    "typeRoots": ["./types", "./node_modules/@types"],
    "outDir": "dist",
    "incremental": false
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
